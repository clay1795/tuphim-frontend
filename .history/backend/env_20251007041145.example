# Backend Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/tuphim
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tuphim

# JWT Secret (generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# External API Configuration
EXTERNAL_API_BASE_URL=https://phimapi.com
API_RATE_LIMIT=60
API_CACHE_DURATION=300000

# Admin Configuration
ADMIN_EMAIL=admin@tuphim.com
ADMIN_PASSWORD=admin123

# Logging
LOG_LEVEL=info
