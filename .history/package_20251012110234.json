{
  "name": "tuphim-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "dev:host": "vite --mode development --host 0.0.0.0",
    "dev:full": "node scripts/start-dev-servers.js",
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "preview": "vite preview",
    "preview:build": "npm run build && npm run preview",
    "test:build": "node scripts/test-build.js",
    "test:functionality": "node scripts/test-functionality.js",
    "test:all": "npm run lint && npm run test:functionality && npm run test:build && npm run preview:build",
    "migrate:mongodb": "cd backend && node scripts/migrateToMongoDB.js",
    "deploy:frontend": "vercel --prod",
    "deploy:backend": "railway deploy",
    "deploy:all": "npm run build && npm run migrate:mongodb && npm run deploy:frontend && npm run deploy:backend",
    "health:check": "curl -f https://your-app.vercel.app/api/health && curl -f https://your-backend.railway.app/api/health",
    "start:port-forwarding": "powershell -ExecutionPolicy Bypass -File start-dev-with-port-forwarding.ps1"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "axios": "^1.12.2",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-modal": "^3.16.1",
    "react-multi-carousel": "^2.8.5",
    "react-router-dom": "^7.9.3",
    "react-youtube": "^10.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "terser": "^5.44.0",
    "vite": "^5.2.0"
  }
}
